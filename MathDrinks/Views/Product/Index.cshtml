@model IEnumerable<Product>
@{
    ViewData["Title"] = "Product Page";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary text-danger">Lista de Produtos</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary bg-danger">
                <i class="bi bi-plus-circle"></i> &nbsp; Criar Novo Produto
            </a>
            <a id="botao-trazer-produtos" class="btn btn-primary btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Atualizar Produtos
            </a>
        </div>
    </div>
    <div>
        <img src="~/lib/img/spinner.gif" alt="Spinner" id="spinner" class="align-content-center">
        <p id="erro">Ocorreu um erro, por favor tente novamente</p>
    </div>
    <form class="d-flex">
        <input id="input-filtro-produto"  class="form-control me-sm-2" type="text" placeholder="Filtrar">
        <button id="botao-filtrar-produto" class="btn btn-secondary my-2 my-sm-0" type="submit">Filtrar</button>
    </form>
    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Nome
                </th>
                <th>
                    Quantidade
                </th>
                <th>
                    Preço
                </th>
                <th>
                    Descrição
                </th>
            </tr>

        </thead>
        <tbody id="tabela-produtos">
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="20%">
                        @obj.Name
                    </td>
                    <td width="13%">
                        @obj.Quantity
                    </td>
                    <td width="20%">
                        @obj.Price
                    </td>
                    <td width="40%">
                        @obj.Description
                    </td>
                    <td>
                        <div class="w-76 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Editar</a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"><i class="bi bi-trash3"></i> Remove</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/main.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

