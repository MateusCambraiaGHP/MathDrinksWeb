@model IEnumerable<Product>
@{
    ViewData["Title"] = "Product Page";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary text-danger">Lista de Produtos</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary bg-danger">
                <i class="bi bi-plus-circle"></i> &nbsp; Criar Novo Produto
            </a>
            <a id="botao-trazer-produtos" class="btn btn-primary btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Atualizar Produtos
            </a>
        </div>
    </div>
    <div>
        <img src="~/lib/img/spinner.gif" alt="Spinner" id="spinner" class="align-content-center">
        <p id="erro">Ocorreu um erro, por favor tente novamente</p>
    </div>
    <div>
        <button type="button" id="botao-exportar" class="btn btn-outline-success mt-4">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-download" viewBox="0 0 16 16">
                <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z" />
                <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3z" />
            </svg> Exportar
        </button>
    </div>
    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Nome
                </th>
                <th>
                    Quantidade
                </th>
                <th>
                    Preço
                </th>
                <th>
                    Descrição
                </th>
            </tr>

        </thead>
        <tbody id="tabela-produtos">
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="20%" id="name-product">
                        @obj.Name
                    </td>
                    <td width="13%">
                        @obj.Quantity
                    </td>
                    <td width="20%">
                        @obj.Price
                    </td>
                    <td width="40%">
                        @obj.Description
                    </td>
                    <td>
                        <div class="w-76 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Editar</a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"><i class="bi bi-trash3"></i> Remove</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
